<SearchCity>:
	orientation:'vertical'
	BoxLayout:
		size_hint_y:2
		orientation:'vertical'
		Label:
			text:'ONLINE WEATHER APP'
		Label:
			size_hint_y:2
			text:'Supports 200,000+ Cities'
			text_size:self.size
			valign:'top'
			halign:'center'
	BoxLayout:
		TextInput:
			id:result
			text:'enter city name'
			size_hint_x:3
			on_double_tap:self.text=''
			multiline:False
		Button:
			text:'Search'
			size_hint_x:1
			on_press:root.parent.findW()
